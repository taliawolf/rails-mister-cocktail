<div class="container">
  <h1 class= "title">Cocktails</h1>
  <div class="row no-gutters">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-sm-6 col-md-4">
        <div class="cocktail-card">
          <div class="card-img"></div>
          <!-- <img src="https://images.unsplash.com/photo-1527661591475-527312dd65f5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="..."> -->
          <div class="cocktail-card-body">
            <h5 class="cocktail-card-title"><%= cocktail.name %></h5>
            <!-- <p class="cocktail-card-text"><%#= "Some quick example text to build on the card title and make up the bulk of the card's content." %></p> -->
            <%= link_to "See more info", cocktail_path(cocktail), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a new cocktail", new_cocktail_path %>
</div>
