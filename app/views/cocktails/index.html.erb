<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536599424071-0b215a388ba7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=200);">
  <div class="container">
    <h1>Cocktails<strong></h1>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "button" %>
  </div>
</div>
<div class="container">
  <div class="row no-gutters">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-sm-6 col-md-4">
        <div class="cocktail-card">
          <div class="card-img"></div>
          <div class="cocktail-card-body">
            <h5 class="cocktail-card-title"><%= cocktail.name %></h5>
            <%= link_to "See Details", cocktail_path(cocktail)%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
