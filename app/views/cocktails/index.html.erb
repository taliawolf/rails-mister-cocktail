<div class="container mt-3">
  <h1 class='text-center mb-5'>Cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <img src="https://images.unsplash.com/photo-1545438102-799c3991ffb2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" />
        <div class="card-infos">
          <h2><%= cocktail.name %></h2>
            <!-- <p>cocktail.</p> -->
        </div>
      </div>
    <% end %>
  </div>
<%= link_to "add a new cocktail", new_cocktail_path %>
</div>
