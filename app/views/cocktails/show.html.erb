<h1><%= @cocktail.name.capitalize %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %>: <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%></li>
  <% end %>
</ul>
<div>
  <h2>Add an ingredient</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient, collection: Ingredient.all, input_html: { class: 'select2' }, include_hidden: false %>
    <%= f.button :submit, class: 'btn btn-danger' %>
<% end %>

<%= link_to "back to all cocktails", cocktails_path %>
</div>

