<h1><%= @cocktail.name.capitalize %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %>: <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%></li>
  <% end %>
</ul>
<div>
  <h2>Add an ingredient</h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient, collection: Ingredient.all, input_html: { class: 'select2' }, include_hidden: false %>
    <%= f.button :submit, class: 'btn btn-danger' %>
<% end %>

<div>
  <h2>Reviews</h2>
  <% @cocktail.reviews.each do |review| %>
    <div class="d-flex" >
    <%= review.content %>
      <ul class= "list-inline ml-3">
        <% review.rating.times do %>
        <li class="list-inline-item"><i class="fas fa-star-of-david"></i></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= link_to "back to all cocktails", cocktails_path %>
<%= link_to "Add a review", new_cocktail_review_path(@cocktail) %>
</div>

